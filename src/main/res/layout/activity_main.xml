<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/name"
        app:layout_constraintBottom_toTopOf="@+id/bdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_ud" />

    <EditText
        android:id="@+id/bdate"
        android:layout_width="372dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/bdate"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:layout_editor_absoluteX="23dp" />

    <EditText
        android:id="@+id/cdate"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Current Date Here"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bdate" />

    <Button
        android:id="@+id/btnADD"
        android:layout_width="276dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:onClick="AddRecord"
        android:text="@string/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cdate" />

    <Button
        android:id="@+id/btnDELETE"
        android:layout_width="281dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:onClick="DeleteRecord"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnADD" />

    <Button
        android:id="@+id/btnUPDATE"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:onClick="UpdateRecord"
        android:text="@string/update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDELETE" />

    <Button
        android:id="@+id/btnSHOW"
        android:layout_width="271dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="148dp"
        android:onClick="ShowRecord"
        android:text="@string/show"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUPDATE" />

    <Button
        android:id="@+id/btnlist"
        android:layout_width="260dp"
        android:layout_height="53dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="62dp"
        android:onClick="DisplayList"
        android:text="@string/showList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSHOW" />

    <EditText
        android:id="@+id/id_ud"
        android:layout_width="359dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Id to update of Delete"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>